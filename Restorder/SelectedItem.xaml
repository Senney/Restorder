<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Restorder.SelectedItem"
	x:Name="UserControl"
	d:DesignWidth="754" d:DesignHeight="229.833">

	<Grid x:Name="LayoutRoot">
		<Grid x:Name="ItemTile" Background="White">
			<TextBlock x:Name="FoodName" HorizontalAlignment="Left" Height="48.833" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Bottom" Width="241"/>
			<TextBlock x:Name="Description" TextWrapping="Wrap" Margin="272,0,0,8"><Run Text="TextBlock"/></TextBlock>
			<Button x:Name="Add" Content="Add Item" Height="50" Width="114" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="{x:Null}"/>
		</Grid>
		<Image x:Name="ItemImage" HorizontalAlignment="Left" Margin="0,0,0,55.833" Width="268"/>
	</Grid>
</UserControl>