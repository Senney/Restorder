<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Restorder.SelectedItem"
	x:Name="UserControl"
	d:DesignWidth="754" d:DesignHeight="229.833">

	<Grid x:Name="LayoutRoot">
		<Grid x:Name="ItemTile" Background="White">
			<TextBlock x:Name="FoodName" HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="206"/>
			<TextBlock x:Name="Description" TextWrapping="Wrap" Margin="210,0,0,50"><Run Text="TextBlock"/></TextBlock>
			<Button x:Name="Add" Content="Add Item" Height="46" Width="102" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="{x:Null}"/>
		</Grid>
		<TextBlock HorizontalAlignment="Left" Margin="8,38,0,8" TextWrapping="Wrap" Text="Ingredient List" Width="198"/>
	</Grid>
</UserControl>