<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Restorder.SelectedItem"
	x:Name="UserControl"
	d:DesignWidth="754" d:DesignHeight="229.833">

	<Grid x:Name="LayoutRoot">
		<Grid x:Name="ItemTile" Background="#FF969696">
			<TextBlock x:Name="FoodName" HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" Text="Selected Item" VerticalAlignment="Top" Width="206" FontSize="21.333" FontWeight="Bold" Margin="5,0,0,0"/>
			<TextBlock x:Name="Description" TextWrapping="Wrap" Margin="210,8,8,50" Text="Item description" FontSize="16"/>
			<Button x:Name="Add" Content="Add Item" Height="46" Width="102" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="{x:Null}" Click="addToOrder"/>
			<TextBlock x:Name="itemPrice" HorizontalAlignment="Right" Height="24" Margin="0,0,106,8" TextWrapping="Wrap" Text="$0.00" VerticalAlignment="Bottom" Width="120" FontSize="18.667" FontWeight="Bold"/>
			<TextBlock x:Name="ingredients" HorizontalAlignment="Left" Margin="8,38,0,8" TextWrapping="Wrap" Text="Item Ingredients" Width="198" FontSize="16" FontWeight="Bold"/>
		</Grid>
	</Grid>
</UserControl>